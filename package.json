{
  "name": "android-studio-flash",
  "displayName": "Android Studio Flash",
  "description": "A lightweight alternative to Android Studio - bringing essential Android development features to VS Code",
  "version": "0.2.5",
  "publisher": "dr-mohammed-hamed",
  "author": {
    "name": "Dr. Mohammed Hamed"
  },
  "license": "MIT",
  "icon": "logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/dr-mohammed-hamed/android-studio-flash"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Debuggers",
    "Other"
  ],
  "keywords": [
    "android",
    "gradle",
    "adb",
    "mobile",
    "emulator",
    "apk",
    "logcat",
    "wireless debugging"
  ],
  "activationEvents": [
    "workspaceContains:**/build.gradle",
    "workspaceContains:**/build.gradle.kts",
    "onCommand:android.buildApk",
    "onCommand:android.runApp",
    "onView:androidDevices"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "android.buildApk",
        "title": "üì¶ Build APK",
        "category": "Android"
      },
      {
        "command": "android.buildDebug",
        "title": "üî® Build Debug APK",
        "category": "Android"
      },
      {
        "command": "android.buildRelease",
        "title": "üì¶ Build Release APK",
        "category": "Android"
      },
      {
        "command": "android.cleanProject",
        "title": "üßπ Clean Project",
        "category": "Android"
      },
      {
        "command": "android.syncGradle",
        "title": "üîÑ Sync Gradle",
        "category": "Android"
      },
      {
        "command": "android.runApp",
        "title": "‚ñ∂Ô∏è Run on Device",
        "category": "Android"
      },
      {
        "command": "android.debugApp",
        "title": "üêõ Debug on Device",
        "category": "Android"
      },
      {
        "command": "android.selectDevice",
        "title": "üì± Select Device",
        "category": "Android"
      },
      {
        "command": "android.selectDeviceFromTree",
        "title": "üì± Select Device from Tree",
        "category": "Android"
      },
      {
        "command": "android.refreshDevices",
        "title": "üîÑ Refresh Devices",
        "category": "Android",
        "icon": "$(refresh)"
      },
      {
        "command": "android.showLogcat",
        "title": "üìã Show Logcat",
        "category": "Android"
      },
      {
        "command": "android.toggleLogcatFilter",
        "title": "üîç Change Logcat Filter Mode",
        "category": "Android"
      },
      {
        "command": "android.stopLogcat",
        "title": "‚èπÔ∏è Stop Logcat",
        "category": "Android"
      },
      {
        "command": "android.clearLogcat",
        "title": "üóëÔ∏è Clear Logcat",
        "category": "Android"
      },
      {
        "command": "android.forgetWirelessDevice",
        "title": "üóëÔ∏è Forget Wireless Device",
        "category": "Android"
      },
      {
        "command": "android.reconnectWirelessDevice",
        "title": "üîÑ Reconnect Wireless Device",
        "category": "Android"
      },
      {
        "command": "android.runDiagnostics",
        "title": "üîç Run Diagnostics",
        "category": "Android"
      },
      {
        "command": "android.setupWireless",
        "title": "‚ûï Setup Wireless Connection",
        "category": "Android"
      },
      {
        "command": "android.disconnectWireless",
        "title": "‚ùå Disconnect Wireless Device",
        "category": "Android"
      },
      {
        "command": "android.refreshWireless",
        "title": "üîÑ Refresh Wireless Devices",
        "category": "Android"
      },
      {
        "command": "android.createKeystore",
        "title": "üîê Create Signing Keystore",
        "category": "Android"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "android-explorer",
          "title": "Android Studio Flash",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "android-explorer": [
        {
          "id": "androidPanel",
          "name": "Android Control Panel",
          "contextualTitle": "Android Development"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "android.refreshDevices",
          "when": "view == androidDevices",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "android.forgetWirelessDevice",
          "when": "view == androidPanel && viewItem == wirelessDevice",
          "group": "wireless@1"
        },
        {
          "command": "android.reconnectWirelessDevice",
          "when": "view == androidPanel && viewItem == wirelessDevice",
          "group": "wireless@2"
        },
        {
          "command": "android.disconnectWireless",
          "when": "view == androidPanel && viewItem == wirelessDevice",
          "group": "wireless@3"
        }
      ],
      "commandPalette": [
        {
          "command": "android.buildApk",
          "when": "workspaceContains:**/build.gradle || workspaceContains:**/build.gradle.kts"
        },
        {
          "command": "android.runApp",
          "when": "workspaceContains:**/build.gradle || workspaceContains:**/build.gradle.kts"
        }
      ]
    },
    "configuration": {
      "title": "Android Studio Flash",
      "properties": {
        "android.sdkPath": {
          "type": "string",
          "default": "",
          "description": "Path to Android SDK (auto-detected if empty)"
        },
        "android.gradlePath": {
          "type": "string",
          "default": "",
          "description": "Path to Gradle (uses Gradle Wrapper if empty)"
        },
        "android.adbPath": {
          "type": "string",
          "default": "",
          "description": "Path to ADB (auto-detected from SDK if empty)"
        },
        "android.logcat.maxLines": {
          "type": "number",
          "default": 1000,
          "description": "Maximum number of Logcat lines"
        },
        "android.build.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show notifications when build completes"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "tree-kill": "^1.2.2"
  }
}
